<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnSeteDias"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/btnQuizeDias"
        android:layout_toStartOf="@+id/btnQuizeDias"
        android:background="@drawable/background_button"
        android:text="7 Dias"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnQuizeDias"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_button"
        android:text="15 Dias"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnTrintaDias"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/btnQuizeDias"
        android:layout_toEndOf="@+id/btnQuizeDias"
        android:background="@drawable/background_button"
        android:text="30 Dias"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSeteDias"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Definir Periodo:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edMes"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:editable="false"
            android:ems="10"
            android:hint="MÃªs"
            android:inputType="none"
            android:padding="5dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edAno"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/edittext_border"
            android:editable="false"
            android:ems="10"
            android:hint="Ano"
            android:inputType="none"
            android:padding="5dp"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>